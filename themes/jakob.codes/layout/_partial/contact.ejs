<section id="contact">
    <div class="wrapper">
        <form name="contact" netlify netlify-honeypot="gotcha">
            <div>
                <label for="name">Your name</label>
                <input class="b-blur-shadow" id="name" name="name" type="text" placeholder="">
            </div>
            <div>
                <label for="email">Your e-mail address</label>
                <input class="b-blur-shadow" id="email" name="email" type="text" placeholder="">
            </div>
            <div>
                <label for="message">Your message</label>
                <textarea class="b-blur-shadow" id="nachricht" name="message" placeholder=""></textarea>
            </div>
            <div>
                <div class="alert-box">
                    The marked fields are mandatory!
                </div>
                <input type="text" name="gotcha" style="display:none">
                <input class="big-button__blue" id="submit" name="submit" type="submit" value="Submit" disabled="true">
            </div>
        </form>
    </div>
</section>